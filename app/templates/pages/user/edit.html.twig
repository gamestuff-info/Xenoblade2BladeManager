{% extends '_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('userEdit') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('userEdit') }}
{% endblock %}

{% block content %}
    {{ include('pages/user/_nav.html.twig') }}

    <div class="tab-pane" role="tabpanel">
        {{ form_errors(form) }}
        {{ form_start(form) }}
        {{ form_row(form.newEmail) }}
        {{ form_row(form.oldPassword) }}
        {{ form_row(form.changePassword) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
