{% extends "_base.html.twig" %}

{% block content %}
    {% include "security/_nav.html.twig" %}

    <ul class="list-inline">
        <li class="list-inline-item">
            <a href="{{ path('connect_google_connect') }}">
                <img src="{{ asset('build/static/oauth/btn_google_signin_light_normal_web.png') }}"
                     srcset="{{ asset('build/static/oauth/btn_google_signin_light_normal_web@2x.png') }} 2x"
                     alt="Sign in with Google">
            </a>
        </li>
    </ul>
    <form action="{{ path('user_login') }}" method="post">
        <div class="form-group">
            <label for="_username">E-Mail</label>
            <input type="text" class="form-control" id="_username" name="_username" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="_password">Password</label>
            <input type="password" class="form-control" id="_password" name="_password">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="_remember_me" name="_remember_me">
            <label class="form-check-label" for="_remember_me">Remember me</label>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
{% endblock %}
